<% include ../partials/header %> 

<div class="container">
  <form action="/rsvp/<%= rsvp._id %>?_method=PUT" method="POST">
    <div class="field">
      <label class="label">Name</label>
      <div class="control">
        <input class="input" type="text" name="rsvp[name]" value="<%= rsvp.name %>">
      </div>
    </div>
    <div class="field">
      <label class="label">Email</label>
      <div class="control">
        <input class="input" type="email" name="rsvp[email]" value="<%= rsvp.email %>">
      </div>
    </div>
    
    <div class="field">
        <label class="label">Attendance</label>
        <div class="control">
          <div class="select">
            <select name="rsvp[attending]">
              <option value="Attending">I'll be there!</option>
              <option value="Evening only">Evening Only</option>
              <option value="Not attending">Sorry, I can't make it!</option>
            </select>
          </div>
        </div>
    </div>
    
    <div class="field">
      <label class="label">Dietary Requirements</label>
      <div class="control">
        <input class="input" type="text" name="rsvp[diet]" value="<%= rsvp.diet %>">
      </div>
    </div>
    
    <div class="field">
      <label class="label">Song Requests</label>
      <div class="control">
        <input class="input" type="text" name="rsvp[song]" value="<%= rsvp.song %>">
      </div>
    </div>
    
    <div class="control">
      <div class="control">
        <div><input class="button is-link" type="submit" value="Send"/></div>
      </div>
    </div>
  </form>
  <a class="button is-text" href="/rsvp">Go back!</a>
</div>

<% include ../partials/footer %> 
