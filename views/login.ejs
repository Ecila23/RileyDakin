<% include ./partials/header %> 

<form class="auth-form" action="/login" method="POST">
    <h1 class="auth-form__heading">Log in</h1>

    <label class="auth-form__label" for="auth-form__input--email">Email</label>
    <input class="auth-form__input" id="auth-form__input--email" type="email" name="username" placeholder="example@email.com">

    <label class="auth-form__label" for="auth-form__input--password">Password </label>
    <input class="auth-form__input" id="auth-form__input--password" type="password" name="password" placeholder="********">

    <button class="auth-form__button" type="submit" >Log in</button>

    <a class="auth-form__link" href="/register">Not registered? Sign up here...</a> 
</form>

<% include ./partials/footer %> 